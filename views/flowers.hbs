<div>
    <div class="flowers-sort">
        <ul>
            <li><a href="#">Цвет</a></li>
            <li><a href="#">Цена</a></li>
            <li><a href="#">Название</a></li>
        </ul>
    </div>
    <div class="flowers-goods" id="flowers-goods">
        {{#each flowers}}
            <div class="rectangle">

                <div class="flower-img">
                    <img src="{{image}}" alt="logo">
                </div>
                <div class="flower-name">
                    <p>{{flower_name}}</p>
                </div>

                <div class="flower-price">
                    <p>{{cost}}</p>
                </div>
                <form id="add" action="/flowers/add" method="post">
                    <input type="hidden" name="_csrf" form="add" value="{{ @root.csrf }}">
                    <div class="flower-button">
                        <button type="submit" form="add" id="{{ idflowers }}">Приобрести цветочки</button>
                    </div>
                </form>
            </div>
        {{/each}}
    </div>
</div>
